<div class="edit-box">
  <h2 class="edit-head">Editing Book</h2>

  <% if @book.errors.any? %>
  <div class="error-box">
    <h6 class="error-count"><%= @book.errors.count %> errors prohibited this book from being saved:</h6>
    <ul class="error-message">
      <% @book.errors.full_messages.each do |message| %>
        <li class="error-text"><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <p class="edit-title">Title</p>
    <%= f.text_field :title %>

    <p class="edit-body">Body</p>
    <%= f.text_area :body %>
    <p class="edit-btn"><%= f.submit "Update Book" %></p>
  <% end %>

  <div class=edit-box2>
  <p class=edit-show><%= link_to "Show", book_path(@book.id),class:"linkto" %></p>
  <p class=edit-one>|</p>
  <p class=edit-back><%= link_to "Back", books_path,class:"linkto" %></p>
</div>
</div>