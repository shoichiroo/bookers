<div class="edit-box">
  <h2 class="edit-head">Editing Book</h2>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <p class="edit-title">Title</p>
    <%= f.text_field :title %>

    <p class="edit-body">Body</p>
    <%= f.text_area :body %>
    <p class="edit-btn"><%= f.submit "Update Book" %></p>
  <% end %>

  <div class=edit-box2>
  <p class=edit-show><%= link_to "Show", book_path(@book.id) %>
  <p class=edit-one>|</p>
  <p class=edit-back><%= link_to "Back", books_path %></p>
</div>
</div>