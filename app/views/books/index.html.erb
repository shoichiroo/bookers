<header>
  <h2 class="heading">Books</h2>
</header>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <tb><%= book.title %></tb>
      <tb><%= book.body %></tb>
      <tb><%= link_to "Show", book_path(book.id) %></tb>
      <tb><%= link_to "Edit", edit_book_path(book.id) %></tb>
      <tb><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></tb>
    </tr>
    <% end %>
  </tbody>
</table>

<footer>
  <h3 class="footer-heading">New book</h3>
  <%= form_with model: @book, url: books_path, method: :post do |f| %>

    <p class="footer-title">Title</p>
    <%= f.text_field :title %>

    <p class="footer-body">Body</p>
    <%= f.text_area :body %>
    <p class="btn"><%= f.submit "Create Book" %></p>
  <% end %>
</footer>