<header>
  <h2 class="heading">Books</h2>
</header>

<table>
  <thead>
    <tr>
      <th class="table-title">Title</th>
      <th class="table-body">Body</th>
      <th class="table-colspan" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr class="table-message">
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id),class:"linkto" %></td>
        <td class="a"><%= link_to "Edit", edit_book_path(book.id),class:"linkto" %></td>
        <td class="a"><%= link_to "Destroy", book_path(book.id),class:"linkto", method: :delete, "data-confirm" => "Are you Sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<footer>
  <h3 class="footer-heading">New book</h3>

  <% if @book.errors.any? %>
  <div class="error-box">
    <h6 class="error-count"><%= @book.errors.count %> errors prohibited this book from being saved:</h6>
    <ul class="error-message">
      <% @book.errors.full_messages.each do |message| %>
        <li class="error-text"><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with model: @book, url: books_path, method: :post do |f| %>

    <p class="footer-title">Title</p>
    <%= f.text_field :title %>

    <p class="footer-body">Body</p>
    <%= f.text_area :body %>
    <p class="btn"><%= f.submit "Create Book" %></p>
  <% end %>
</footer>